{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "cors_origins": "*"
  },
  "messages": {
    "max_length": 2048,
    "max_per_room": 1000,
    "save_to_disk": true
  },
  "rooms": {
    "default_room": "general",
    "auto_create": true,
    "max_members": 100
  },
  "url_detection": {
    "enabled": true,
    "log_detections": true,
    "block_malicious": false,
    "timeout": 10
  },
  "storage": {
    "state_file": "data/state.json",
    "backup_interval": 300,
    "auto_cleanup": true
  },
  "logging": {
    "level": "INFO",
    "show_timestamps": true,
    "log_connections": true,
    "log_messages": false
  }
}